  },
  "enabledMcpjsonServers": [
    "rust-analyzer"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce_lsp.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce_scripts.py"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/check_branch.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce_removal_check.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/check_branch.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/auto_check.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/track_edits.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce_batch_ops.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce_delegation.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/auto_check.py"
          }
        ]
      },
      {
        "matcher": "LSP",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/track_lsp.py"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce_delegation.py"
          }
        ]
      }
    ]
  },
  "outputStyle": "default",
  "spinnerTipsEnabled": false
}
